<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="movie1" class="com.stackroute.Movie" autowire="byName" >
        <property name="actor" ref="actor1" />
    </bean>
    <bean id="actor1" class="com.stackroute.Actor">
        <property  name="name" value="Mahesh" />
        <property  name="age" value="35" />
        <property  name="aid" value="1" />
    </bean>
    <bean id="movie2" class="com.stackroute.Movie"  >
        <constructor-arg name="actor" ref="actor2" index="0"/>
    </bean>
    <bean id="actor2" class="com.stackroute.Actor">
        <constructor-arg name="name" value="Hrithik" index="0" type="java.lang.String"/>
        <constructor-arg name="age" value="45" index="1" type="int"/>
        <constructor-arg name="aid" value="2" index="2" type="int"/>
    </bean>
</beans>