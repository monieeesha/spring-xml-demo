<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="movie1" class="com.stackroute.awareInterface.Movie"  >
        <property name="actor" ref="actor1" />
    </bean>
    <bean id="actor1" class="com.stackroute.awareInterface.Actor">
        <property  name="name" value="Mahesh" />
        <property  name="age" value="35" />
        <property  name="aid" value="1" />
    </bean>

    <bean id="movie2" class="com.stackroute.awareInterface.Movie"  >
        <property name="actor" ref="actor2" />
    </bean>
    <bean id="actor2" class="com.stackroute.awareInterface.Actor">
        <property  name="name" value="hrithik" />
        <property  name="age" value="40" />
        <property  name="aid" value="2" />
    </bean>


    <bean id="applicationcontextawaredemo" class="com.stackroute.awareInterface.ApplicationContextAwareDemo"></bean>
    <bean id="beanfactoryawaredemo"       class="com.stackroute.awareInterface.BeanFactoryAwareDemo"></bean>
    <bean id=" beannameawaredemo"         class="com.stackroute.awareInterface.BeanNameAwareDemo"></bean>
    <bean id="resourceloaderawredemo"     class="com.stackroute.awareInterface.ResourceLoaderAwareDemo"></bean>
    <bean id=" beanlifecycledemobean"  class="com.stackroute.awareInterface.BeanLifecycleDemoBean"   init-method="customInit" destroy-method="customDestroy">
    </bean>
</beans>