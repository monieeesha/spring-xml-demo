<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="movie1" class="com.stackroute.Movie">
        <property name="actor" ref="actor1"/>
    </bean>
    <bean id="actor1" class="com.stackroute.Actor">

        <property name="name" value="shahid"/>
        <property name="age" value="40"/>
        <property name="aid" value="1"/>
    </bean>

    <bean id="movie2" class="com.stackroute.Movie">
        <property name="actor" ref="actor2"/>
    </bean>
    <bean id="actor2" class="com.stackroute.Actor">
        <property name="name" value="sharukh"/>
        <property name="age" value="41"/>
        <property name="aid" value="2"/>
    </bean>


    <bean id="movie3" class="com.stackroute.Movie">
        <property name="actor" ref="actor3"/>
    </bean>
    <bean id="actor3" class="com.stackroute.Actor">
        <property name="name" value="hrithik"/>
        <property name="age" value="42"/>
        <property name="aid" value="3"/>
    </bean>
</beans>